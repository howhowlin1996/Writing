<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.writing.panel.CopyWritingGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/DeleteButton_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刪除"
            android:textSize="18sp" />

        <Button
            android:id="@+id/SaveButton_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正確"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/characterQleft_copywriting"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/pic_0000" />

        <ImageView
            android:id="@+id/phoneticleftQ_copywriting"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            app:srcCompat="@drawable/pic_00001" />

        <com.example.writing.panel.Panel
            android:id="@+id/panel_copy"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/phoneticQright_copywriting"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            app:srcCompat="@drawable/pic_000011" />

    </com.example.writing.panel.CopyWritingGroup>

</LinearLayout>
