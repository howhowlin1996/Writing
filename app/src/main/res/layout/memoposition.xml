<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <com.example.writing.memo.MemoViewGroup
        android:id="@+id/memoposition_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </com.example.writing.memo.MemoViewGroup>

    <Button
        android:id="@+id/confirmbutton_memopos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/yesword"
        app:layout_constraintBottom_toBottomOf="@+id/memoposition_group"
        app:layout_constraintEnd_toEndOf="@+id/memoposition_group"
        app:layout_constraintStart_toStartOf="@+id/memoposition_group"
        app:layout_constraintTop_toTopOf="@+id/memoposition_group"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>