<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/writing_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <com.example.writing.panel.WritingPanelGroup
        android:id="@+id/group_writing"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/help_writing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="幫幫我"
            android:textSize="18sp"
            tools:textStyle="bold" />

        <Button
            android:id="@+id/memo_writing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="筆記本"
            android:textSize="18sp"
            tools:textStyle="bold" />

        <Button
            android:id="@+id/DeleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刪除"
            android:textSize="18sp"
            tools:textStyle="bold" />

        <Button
            android:id="@+id/SaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正確"
            android:textSize="18sp"
            tools:textStyle="bold" />

        <ImageView
            android:id="@+id/characterQleft_writing"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <ImageView
            android:id="@+id/phoneticleftQ_writing"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp" />

        <com.example.writing.panel.Panel
            android:id="@+id/panel"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/phoneticQright_writing"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp" />

        <ImageView
            android:id="@+id/characterQlast_writing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/phoneticQlast_writing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </com.example.writing.panel.WritingPanelGroup>

</LinearLayout>
